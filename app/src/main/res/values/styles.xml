<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EC407A</item>
        <item name="colorPrimaryDark">#C2185B</item>
        <item name="colorAccent">#C2185B</item>
        <item name="colorButtonNormal">#EC407A</item>
    </style>

    <!--style the question text-->
    <style name="question_style">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--style the answer texts-->
    <style name="answer_style">
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <!--style next and previous buttons-->
    <style name="next_prev_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

</resources>
